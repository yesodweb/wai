        cpp-options:   -DSENDFILEFD
        build-depends: unix

    if os(windows)
        cpp-options:   -DWINDOWS
        build-depends:
            time,
            unix-compat >=0.2

    if impl(ghc >=8)
        default-extensions: Strict StrictData
