        bytestring,
        case-insensitive,
        containers,
        gauge,
        ghc-prim,
        hashable,
        http-date,
        http-types,
        network,
        network,
        recv,
        streaming-commons,
        text,
        time-manager,
        unliftio,
        vault,
        wai,
