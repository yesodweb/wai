                   , wai-extra
                   , wai
                   , hspec >= 1.3
                   , transformers
                   , fast-logger
                   , http-types
                   , zlib
                   , text
                   , resourcet
                   , bytestring
                   , HUnit
                   , blaze-builder
                   , cookie
                   , time
                   , case-insensitive
    ghc-options:     -Wall

